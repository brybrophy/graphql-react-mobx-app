{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "lib": ["esnext", "dom"],
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "test", "dist", ".cache"]
}
